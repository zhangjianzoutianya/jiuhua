.operation {
	width: 750rpx;
	height: 88rpx;
	background: rgba(201, 0, 9, 1);
	position: fixed;
	bottom: 0;
	left: 0;
	font-size: 30rpx;
	font-family: PingFang-SC-Medium;
	font-weight: 500;
	color: rgba(255, 255, 255, 1);
	text-align: center;
	line-height: 88rpx;
}
.nul {
	width: 88rpx;
	height: 88rpx;
}
.popup {
	position: fixed;
	z-index: 20;
	background-color: rgba(0, 0, 0, 0.5);
	overflow: hidden;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
}
.alert {
	width: 628rpx;
	height: 305rpx;
	background: rgba(255, 255, 255, 1);
	border-radius: 10rpx;
	position: absolute;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	    -ms-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	overflow: hidden;
}
.alert>view {
	width: 100%;
	height: 100%;
	overflow: hidden;
	position: relative;
}
.alert-img {
	width: 89rpx;
	height: 89rpx;
	margin: 0 auto;
	margin-top: 31rpx;
}
.alert-img>image {
	width: 100%;
	height: 100%;
}
.alert-title {
	margin-top: 30rpx;
	height: 30rpx;
	font-size: 28rpx;
	text-align: center;
	font-family: PingFang-SC-Medium;
	font-weight: 500;
	color: rgba(51, 51, 51, 1);
}
.alert-btn {
	position: absolute;
	width: 100%;
	height: 75rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	left: 0;
	bottom: 0;
}
.alert-btn>view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	text-align: center;
	line-height: 75rpx;
}
.no {
	font-size: 30rpx;
	font-family: PingFang-SC-Medium;
	font-weight: 500;
	color: rgba(153, 153, 153, 1);
	border-top: 1px solid rgba(238, 238, 238, 1);
	border-right: 1px solid rgba(238, 238, 238, 1);
}
.yes {
	font-size: 30rpx;
	font-family: PingFang-SC-Medium;
	border-top: 1px solid rgba(238, 238, 238, 1);
	font-weight: 500;
	color: rgba(201, 0, 9, 1);
}

