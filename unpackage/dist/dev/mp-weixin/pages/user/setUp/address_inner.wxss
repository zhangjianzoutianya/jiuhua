
#app {
	background-color: rgba(247, 247, 247, 1);
	width: 100%;
	min-height: 100%;
	overflow: hidden;
}
.adress_con{
	width: 100%;
	border-top: 1rpx solid rgba(238,238,238,1);
	padding-bottom: 96rpx;
}
.address_inner{
	padding: 0rpx 26rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	border-bottom: 1rpx solid rgba(238,238,238,1);
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	background: #fff;
}
.address_inner>text{
	width: 24%;
	height:90rpx;
	font-size:30rpx;
	color:rgba(51,51,51,1);
	line-height: 90rpx;
}
.address_inner input{
	width: 76%;
	height:90rpx;
	font-size:30rpx;
	color:rgba(51,51,51,1);
	line-height: 90rpx;
	border: none;
}
.address_inner view{
	width: 76%;
	height:90rpx;
	line-height: 90rpx;
	text-align: right;
}
.address_inner view text{
	display: inline-block;
	font-size:26rpx;
	font-weight:500;
	color:rgba(153,153,153,1);
	vertical-align: top;
	margin-right: 16rpx;
}
.address_inner view image{
	width: 16rpx;
	height: 31rpx;
}
.address_inner_textarea{
	padding:20rpx 26rpx;
	background:rgba(241,241,241,1);
	border-bottom: none;
}
.address_inner textarea{
	width:100%;
	height:210rpx;
	font-size:26rpx;
	line-height: 30rpx;
	color:rgba(102,102,102,1);
	letter-spacing: 1rpx;
}
.address_delete{
	padding: 30rpx 26rpx;
	background: #fff;
	margin-top: 25rpx;
	font-size:30rpx;
	font-weight:500;
	color:rgba(201,0,9,1);
}
.adress_add{
	width: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
	line-height: 96rpx;
	height: 96rpx;
	font-size:32rpx;
	font-weight:500;
	color:rgba(255,255,255,1);
	text-align: center;
	background:rgba(201,0,9,1);
}
.adress_add image{
	width: 49rpx;
	height: 49rpx;
	margin-right: 16rpx;
	vertical-align: -12rpx;
}



