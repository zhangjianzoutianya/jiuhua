
#app {
	background-color: rgba(247, 247, 247, 1);
	width: 100%;
	min-height: 100%;
	overflow: hidden;
}
.adress_con{
	width: 100%;
	border-top: 1rpx solid rgba(238,238,238,1);
	padding-bottom: 96rpx;
}
.address_inner{
	padding: 0rpx 26rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	border-bottom: 1rpx solid rgba(238,238,238,1);
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	background: #fff;
	position: relative;
}
.address_inner>text{
	width: 24%;
	height:90rpx;
	font-size:30rpx;
	color:rgba(51,51,51,1);
	line-height: 90rpx;
}
.address_inner input{
	width: 76%;
	height:90rpx;
	font-size:30rpx;
	color:rgba(51,51,51,1);
	line-height: 90rpx;
	border: none;
}
.address_inner view{
	width: 76%;
	height:90rpx;
	line-height: 90rpx;
	text-align: right;
}
.address_inner image{
	width: 16rpx;
	height: 31rpx;
	position: absolute;
	top: 29rpx;
	right: 28rpx;
}
.address_inner textarea{
	width: 76%;
	padding: 25rpx 0;
	height:90rpx;
	font-size:30rpx;
	color:rgba(153,153,153,1);
	line-height:45rpx;
}
.address_delete{
	padding: 30rpx 26rpx;
	background: #fff;
	margin-top: 25rpx;
	font-size:30rpx;
	font-weight:500;
	color:rgba(201,0,9,1);
	position: relative;
}
.address_delete text{
	width: 31rpx;
	height: 31rpx;
	border:2rpx solid rgba(102,102,102,1);
	margin-right: 10rpx;
	border-radius: 100%;
	position: absolute;
	top: 33rpx;
	right: 30rpx;
	-webkit-transition:background-image 0.3s ease;	
	-o-transition:background-image 0.3s ease;	
	transition:background-image 0.3s ease;
}
.address_delete text.active{
	border:2rpx solid #c90009;
	width: 31rpx;
	height: 31rpx;
	background-image: url(data:image/png;base64,);
	background-position: center;
	background-size: 105% 105%;
}
.adress_add{
	width: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
	line-height: 96rpx;
	height: 96rpx;
	font-size:32rpx;
	font-weight:500;
	color:rgba(255,255,255,1);
	text-align: center;
	background:rgba(201,0,9,1);
}
.adress_add image{
	width: 49rpx;
	height: 49rpx;
	margin-right: 16rpx;
	vertical-align: -12rpx;
}



