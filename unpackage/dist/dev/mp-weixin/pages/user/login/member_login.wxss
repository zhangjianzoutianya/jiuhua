
#app {
	overflow: hidden;
}
.logo {
	width: 141rpx;
	height: 125rpx;
	margin-top: 100rpx;
	margin-left: 305rpx;
	overflow: hidden;
	margin-bottom: 68rpx;
}
.logo>image {
	width: 100%;
	height: 100%;
}
.user-view {
	width: 630rpx;
	height: 106rpx;
	margin: 0 auto;
	overflow: hidden;
	border-bottom: 1px solid rgba(230, 230, 230, 1);
}
.user-img {
	width: 34rpx;
	height: 39rpx;
	margin-top: 33rpx;
	margin-right: 36rpx;
	float: left;
}
.user-img>image {
	width: 100%;
	height: 100%;
}
.user-input {
	width: 360rpx;
	height: 106rpx;
	overflow: hidden;
}
.user-input>input {
	width: 360rpx;
	height: 106rpx;

	line-height: 106rpx;
	font-size: 28rpx;
	font-family: PingFang-SC-Medium;
	font-weight: 500;
	color: rgba(153, 153, 153, 1);
}
.code {
	width: 150rpx;
	float: right;
	text-align: right;
	height: 106rpx;
	line-height: 106rpx;
	font-size: 22rpx;
	font-family: PingFang-SC-Regular;
	font-weight: 400;
	color: rgba(200, 0, 10, 1);
}
.login {
	width: 631rpx;
	height: 80rpx;
	background: rgba(200, 0, 10, 1);
	opacity: 0.5;
	border-radius: 40rpx;
	margin: 0 auto;
	text-align: center;
	line-height: 80rpx;
	font-size: 30rpx;
	font-family: MicrosoftYaHei;
	font-weight: 400;
	color: rgba(255, 255, 255, 1);
	margin-top: 72rpx;
}
.weixin {
	width: 100%;
	overflow: hidden;
	margin-top: 58rpx;
}
.weixin-text {
	font-size: 28rpx;
	font-family: PingFang-SC-Medium;
	font-weight: 500;
	color: rgba(204, 204, 204, 1);
	text-align: center;
}
.weixin-inco {
	width: 83rpx;
	height: 83rpx;
	margin: 0 auto;
	overflow: hidden;
	margin-top: 38rpx;
}
.weixin-inco>image {
	width: 100%;
	height: 100%;
}
.statement {
	width: 100%;
	font-size: 24rpx;
	font-family: PingFang-SC-Medium;
	font-weight: 500;
	color: rgba(153, 153, 153, 1);
	text-align: center;
	margin-top: 82rpx;
}
.statement>text {
	color: rgba(200, 0, 10, 1);
}

