
.business .pages{
	padding-top: 45rpx;
	padding-bottom: 100rpx;
}
.business .business_list{
	padding: 60rpx 27rpx 40rpx 27rpx;
	border-bottom: 20rpx solid rgba(247,247,247,1);
}
.business .business_h5{
	position: relative;
	font-size:32rpx;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:24rpx;
	padding-bottom: 20rpx;
	margin-bottom: 35rpx;
}
.business .business_h5:before{
	content: '';
	position: absolute;
	bottom: 0;
	left: 0;
	width:32rpx;
	height:4rpx;
	background-color: rgba(201,0,9,1);
}
.business .business_h5 .txt{
	height:24rpx;
	font-size:24rpx;
	color:rgba(201,0,9,1);
	line-height:24rpx;
	position: absolute;
	top: 0;
	right: 0;
}
.business .business_h5 .txt image{
	display: inline-block;
	width:12rpx;
	height:22rpx;
	margin-left: 10rpx;
}
.business .business_list_1 .business_list_banner{
	width: 100%;
}
.business .business_list_1 .business_list_banner image{
	width: 695rpx;
	height: 345rpx;
}
.business .unmanned {
	width: 100%;
	height: 150rpx;
	overflow: hidden;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin-top: 46rpx;
}
.business .unmanned-view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	height: 100%;
}
.business .unmanned-img {
	width: 109rpx;
	height: 109rpx;
	margin: 0 auto;
	overflow: hidden;
}
.business .unmanned-img>image {
	width: 100%;
	height: 100%;
}
.business .unmanned-text {
	text-align: center;
	height: 28rpx;
	font-size: 28rpx;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
}
.business .sell-like-hot-cakes {
	margin: 0 auto;
	margin-top: 53rpx;
}
.business .sell-like-hot-cakes-text {
	height: 32rpx;
	font-size: 30rpx;
	font-weight: bold;
	color: rgba(51, 51, 51, 1);
	line-height: 32rpx;
}
.business .sell-like-hot-cakes-i {
	width: 35rpx;
	height: 4rpx;
	margin-top: 8rpx;
	background: rgba(201, 201, 201, 1);
}
.business .area {
	margin-top: 32rpx;
	width: 698rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.business .area-view {
	width: 226rpx;
	height: 292rpx;
	border-radius: 14rpx;
	position: relative;
}
.business .area-view:nth-child(2) {
	margin: 0 10rpx;
}
.business .area-view>image {
	width: 100%;
	height: 100%;
}
.business .mask {
	position: absolute;
	bottom: 15rpx;
	left: 0;
	padding:0 19rpx;
}
.business .ranking {
	width: 99rpx;
	height: 32rpx;
	background: -webkit-gradient(linear, left bottom, left top, from(rgba(232, 129, 54, 1)), to(rgba(232, 70, 53, 1)));
	background: -o-linear-gradient(bottom, rgba(232, 129, 54, 1) 0%, rgba(232, 70, 53, 1) 100%);
	background: linear-gradient(0deg, rgba(232, 129, 54, 1) 0%, rgba(232, 70, 53, 1) 100%);
	opacity: 0.8;
	border-radius: 32rpx 0 32rpx 0;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 1);
	line-height: 32rpx;
	padding-left: 10rpx;
}
.business .area-text {
	height: 27rpx;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 1);
	line-height: 27rpx;
	margin-top: 50rpx;
}
.business .area-name {
	height: 27rpx;
	font-size: 24rpx;
	color: rgba(255, 255, 255, 1);
	line-height: 27rpx;
	margin-top: 19rpx;
}
