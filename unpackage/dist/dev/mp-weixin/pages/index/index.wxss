.footer{
	width: 100%;
	height: 98rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	background:rgba(255,255,255,1);
	-webkit-box-shadow:0px 0px 13px 0px rgba(217, 217, 217, 0.35);
	        box-shadow:0px 0px 13px 0px rgba(217, 217, 217, 0.35);
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.footer_list{
	width: 33.33%;
	text-align: center;
}
.footer_list image{
	display: block;
	margin: 0 auto;
	margin-bottom: 9rpx;
}
.footer_list:nth-child(1) image{
	width: 42rpx;
	height: 35rpx;
	margin-top: 18rpx;
}
.footer_list:nth-child(2) image{
	width: 42rpx;
	height: 40rpx;
	margin-top: 13rpx;
}
.footer_list:nth-child(3) image{
	width: 44rpx;
	height: 40rpx;
	margin-top: 13rpx;
}
.footer_list .txt{
	display: block;
	height:24rpx;
	font-size:24rpx;
	font-weight:500;
	color:rgba(153,153,153,1);
	line-height:24rpx;
}
.footer_list.active .txt{
	color:rgba(201,0,9,1);
}


