
.search {
	width: 698rpx;
	height: 60rpx;
	margin: 26rpx auto;
	overflow: hidden;
}
.map {
	width: 60rpx;
	height: 60rpx;
	margin-left: 36rpx;
	float: right;
	overflow: hidden;
}
.map > image {
	width: 100%;
	height: 100%;
}
.search-input {
	width: 602rpx;
	height: 60rpx;
	background:rgba(243,243,243,1);
	border-radius:10px;
}
.search-input > image {
	width: 32rpx;
	height: 32rpx;
	margin: 14rpx;
	float: left;
}
.search-input > input {
	font-size:24rpx;
	color:rgba(153,153,153,1);
	line-height:60rpx;
}
.switch-view {
	width: 100%;
	height: 70rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	border-bottom: 4rpx solid #eee;
}
.switch-text {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	position: relative;
}
.switch-text > view {
	
	text-align: center;
	font-size:30rpx;
	font-family:PingFang-SC-Medium;
	font-weight:500;
	line-height:70rpx;
}
.hover {
	color:rgba(201,0,9,1);
}
.hover1 {
	color:rgba(51,51,51,1);
}
.switch-text > image {
	position: absolute;
	width: 14rpx;
	height: 8rpx;
}
.switch-text:nth-child(1) > image {
	top: 33rpx;
	left: 260rpx;
}
.switch-text:nth-child(2) > image {
	top: 33rpx;
	left: 230rpx;
}
.merchant {
	width: 698rpx;
	margin: 0 auto;
	overflow: hidden;
}
.merchant-view {
	width: 100%;
	height: 231rpx;
	overflow: hidden;
	border-bottom: 1rpx solid rgba(233,233,233,1);
}
.merchant-img {
	float: right;
	margin-top: 72rpx;
	width: 100rpx;
}
.merchant-img > image {
	width: 60rpx;
	height: 60rpx;
	margin-left: 20rpx;
}
.merchant-img > view {
	width:100rpx;
	height:19rpx;
	font-size:24rpx;
	color:rgba(153,153,153,1);
	text-align: center;
	line-height:30rpx;
}
.merchant-image {
	width:158rpx;
	height:158rpx;
	border-radius:6rpx;
	margin-top: 39rpx;
	margin-right: 22rpx;
	overflow: hidden;
	float: left;
}
.merchant-image > image {
	width: 100%;
	height: 100%;
}
.merchant-text1 {
	margin-top: 50rpx;
	height:29rpx;
	font-size:30rpx;
	font-family:PingFang-SC-Medium;
	font-weight:bold;
	color:rgba(51,51,51,1);
	line-height:47rpx;
}
.merchant-text2 {
	margin-top: 16rpx;
	height:21rpx;
	font-size:22rpx;
	font-family:PingFang-SC-Medium;
	font-weight:500;
	color:rgba(153,153,153,1);
}
.merchant-text3 {
	margin-top: 31rpx;
	overflow: hidden;
}
.merchant-text3 > image {
	width: 23rpx;
	height: 23rpx;
	margin-right: 10rpx;
	float: left;
}
.merchant-text3 > view {
	height:23rpx;
	line-height: 23rpx;
